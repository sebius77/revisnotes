<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>{% block title %}Revisnotes{% endblock %}</title>

    {% block stylesheets %}
        <!-- Le styles -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
              integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}
</head>

<body>

<!-- BARRE DE NAVIGATION -->
<nav class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="navbar-brand"><img src={{ asset('images/logoSimple.png') }} ></div>
        </div>
        <div id="navbar" class="collapse navbar-collapse">

            <ul class="nav navbar-nav">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <li><a class="glyphicon glyphicon-home" href="{{ path('Accueil') }}">Accueil</a></li>
                    <li><a class="glyphicon glyphicon-folder-close" href="{{ path('AReviser') }}">ARéviser</a></li>
                    <li><a class="glyphicon glyphicon-edit" href="{{ path('Ajouter') }}">Ajouter</a></li>
                    <li><a class="glyphicon glyphicon-search">Rechercher</a></li>
                {% endif %}
            </ul>
            <ul class="nav navbar-nav navbar-right">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <li><a class="glyphicon glyphicon-cog" title="paramètres" href="#"></a></li>
                    <li><a class="glyphicon glyphicon-user" title="{{ app.user.username }}" href="#"></a></li>
                    <li><a class="glyphicon glyphicon-log-out" href="{{ path('fos_user_security_logout') }}">
                           {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a></li>
                {% else %}
                    <li><a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></li>
                    <li><a href="{{ path('fos_user_registration_register') }}">S'inscrire</a></li>
                {% endif %}

            </ul>
        </div>
    </div>
</nav>

<div id="container-body" class="container-fluid">
    {% block body %}
    {% endblock %}
</div>



<div id="footer" class="text-center">
    <div class="row">
        <div class="col-md-3">
            test 1
        </div>
        <div class="col-md-3">
            test 2
        </div>
        <div class="col-md-3">
            test 3
        </div>
        <div class="col-md-3">
            test 4
        </div>
    </div>
    <div id="footer-bas" class="row">
        <h3>© Sébastien Gaudin</h3>
    </div>

</div>

{% block javascripts %}
    <script
            src="https://code.jquery.com/jquery-3.2.1.js"
            integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE="
            crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    {{ tinymce_init({'theme': {'simple': {'menubar': false}}}) }}

{% endblock %}

</body>
</html>