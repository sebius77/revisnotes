
{% extends "GebsUserBundle::layout.html.twig" %}

{% block fos_user_content %}



    {% if note is null  %}
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    Il n' y a pas de notes à réviser.
                </div>
            </div>
        </div>
    {% else %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <h1 class="text-center">{{ note.titre }}</h1>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <H2>Enoncé</H2>
                    </div>
                    {{ note.enonce|raw }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-danger">
                    <div class="panel-heading">
                        <H2>
                            Solution
                            <button class="pull-right" data-toggle="collapse" data-target="#note-{{ note.id }}"><i class="material-icons">arrow_downward</i></button>
                        </H2>
                    </div>
                    <div id="note-{{ note.id }}" class="panel-body collapse">
                        {{ note.solution|raw }}
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 element"><a href="{{ path('autoEval', {'id': note.id , 'bouton': 'revoir'}) }}">
                    <button class="btn btn-danger btn-lg">À revoir</button></a></div>
            <div class="col-md-3 element"><a href="{{ path('autoEval', {'id': note.id, 'bouton': 'difficile'}) }}">
                    <button class="btn btn-warning btn-lg">Difficile</button></a></div>
            <div class="col-md-3 element"><a href="{{ path('autoEval', {'id': note.id, 'bouton': 'bien'}) }}">
                    <button class="btn btn-info btn-lg">Bien</button></a></div>
            <div class="col-md-3 element"><a href="{{ path('autoEval', {'id': note.id, 'bouton': 'parfait'}) }}">
                    <button class="btn btn-success btn-lg">Parfait</button></a></div>
        </div>
    </div>
    {% endif %}


{% endblock fos_user_content %}